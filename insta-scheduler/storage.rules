rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload files to the scheduled folder
    match /scheduled/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to uploaded media (for Instagram posting)
    match /scheduled/{allPaths=**} {
      allow read: if true;
    }
  }
}
