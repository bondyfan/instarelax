rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own scheduled posts
    match /scheduled_posts/{postId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }

    // Users can read and write their own instagram connection
    match /instagram_connections/{userId} {
      // We save the document id as the uid; accept either id match or field match for safety
      allow read, write: if request.auth != null && (
        request.auth.uid == userId || request.auth.uid == request.resource.data.userId
      );
    }
  }
}

